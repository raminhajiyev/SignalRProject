@model List<SignalRWebUI.DTOs.ContactDto.ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid">
    <h4 class="page-title">Tables</h4>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Contact Table</div>
                </div>
                <div class="card-body">
                    <div class="card-sub">
                        Available categories
                    </div>
                    <table class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Loc.</th>
                                <th scope="col">Mail</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Desc.</th>
                                <th scope="col">Op.Hours</th>
                                <th scope="col">Op.Days</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Update</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Location</td>
                                    <td>@item.Mail</td>
                                    <td>@item.Phone</td>
                                    <td>@item.FooterDescription</td>
                                    <td>@item.OpeningHours</td>
                                    <td>@item.OpeningDays</td>
                                    <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger">Delete</a></td>
                                    <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-success">Update</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Contact/CreateContact/" class="btn btn-primary">Add Contact</a>
                </div>
            </div>
        </div>
    </div>
</div>

