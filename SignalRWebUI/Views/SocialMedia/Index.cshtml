@model List<SignalRWebUI.DTOs.SocialMediaDto.ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid">
    <h4 class="page-title">Tables</h4>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Social Media Table</div>
                </div>
                <div class="card-body">
                    <div class="card-sub">
                        Available Social Media
                    </div>
                    <table class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Title</th>
                                <th scope="col">Url</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Update</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Title</td>
                                    <td>@item.Url</td>
                                    <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-danger">Delete</a></td>
                                    <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-success">Update</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/SocialMedia/CreateSocialMedia/" class="btn btn-primary">Add SocialMedia</a>
                </div>
            </div>
        </div>
    </div>
</div>

