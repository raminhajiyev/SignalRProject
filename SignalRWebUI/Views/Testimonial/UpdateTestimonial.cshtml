@model SignalRWebUI.DTOs.TestimonialDto.UpdateTestimonialDto

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
	<h4 class="page-title">Forms</h4>
	<div class="row">
		<div class="col-md-12">
			<form method="post">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Update Testimonial</div>
					</div>
					<div class="card-body">
						<input type="hidden" asp-for="TestimonialId" />
						<div class="form-group">
							<label for="categoryname">Fullname</label>
							<input type="text" class="form-control" id="categoryname" asp-for="Fullname">
						</div>
					</div>
					<div class="card-body">
						<div class="form-group">
							<label for="categoryname">Title</label>
							<input type="text" class="form-control" id="categoryname" asp-for="Title">
						</div>
					</div>
					<div class="card-body">
						<div class="form-group">
							<label for="categoryname">Comment</label>
							<textarea style="height:25px; width:100px" class="form-control" id="categoryname" asp-for="Comment"></textarea>
						</div>
					</div>
					<div class="card-body">
						<div class="form-group">
							<label for="categoryname">Image</label>
							<input type="text" class="form-control" id="categoryname" asp-for="ImageUrl">
						</div>
					</div>

					<div class="card-action">
						<button class="btn btn-success">Save</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

